<!-- PAGE CONTENT -->
<div class="favContainer">
    <div class="row" id="recipesection">
        <div class="col-8">
            <h2>Your Favourite Recipes:</h2>

            <ul id="recipe-list" class="list-group">
                {{#each recipes}}
                <li data-id="{{this.id}}" class="list-group-item">
                    <h3>{{this.name}}</h3>
                    <p>Cuisine: {{this.cuisine}}</p>
                    <p>Instructions: {{this.instructions}}</p>
                    <p>Allergies: {{this.allergy}}</p>
                </li>
                {{/each}}
                <br>
            </ul>
            <br>
            <button class="btn"><a href="/addrecipes">Add New Recipe</a></button>
        </div>
    </div>
</div>

<!-- PAGE CONTENT ENDS -->



